      </div>
      <div class="field">
        <%= f.label :low_essence_elemental %><br>
        <%= f.number_field :low_essence_elemental %>
      </div>
      <div class="field">
        <%= f.label :high_essence_magic %><br>
        <%= f.number_field :high_essence_magic %>
      </div>
