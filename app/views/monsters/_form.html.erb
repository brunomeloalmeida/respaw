      </div>
      <div class="field">
        <%= f.label :res_awake %><br>
        <%= f.number_field :res_awake %>
      </div>
      <div class="field">
        <%= f.label :acc_awake %><br>
        <%= f.number_field :acc_awake %>
      </div>
      <div class="field">
        <%= f.label :high_essence_elemental %><br>
        <%= f.number_field :high_essence_elemental %>
      </div>
      <div class="field">
        <%= f.label :mid_essence_elemental %><br>
