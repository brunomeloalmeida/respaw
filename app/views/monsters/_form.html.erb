<%= form_for(@monster) do |f| %>
  <% if @monster.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@monster.errors.count, "error") %> prohibited this monster from being saved:</h2>

      <ul>
      <% @monster.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 ">
      <div class="field">
        <%= f.label :avatar %><br>
        <%= f.file_field :avatar %>
      </div>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>  
      <div class="field">
        <%= f.label :element %><br>
        <%= f.select( "element", options_for_select([["Fire"], ["Water"], ["Wind"], ["Dark"], ["Light"]], @monster.element), {include_blank: "Selecione"}) %>
      </div>
      <div class="fiel">
        <%= f.label :star %><br>
        <%= f.select( "star", options_for_select([[1], [2], [3], [4], [5]], @monster.star), {include_blank: "Selecione"}) %>
      </div>
      <div class="field">
        <%= f.label :hp_base %><br>
        <%= f.number_field :hp_base %>
      </div>
      <div class="field">
        <%= f.label :atk_base %><br>
        <%= f.number_field :atk_base %>
      </div>
      <div class="field">
        <%= f.label :def_base %><br>
        <%= f.number_field :def_base %>
      </div>
      <div class="field">
        <%= f.label :vel_base %><br>
        <%= f.number_field :vel_base %>
      </div>
      <div class="field">
        <%= f.label :cr %><br>
        <%= f.number_field :cr %>
      </div>
      <div class="field">
