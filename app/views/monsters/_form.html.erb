        <%= f.number_field :cd %>
      </div>
      <div class="field">
        <%= f.label :res %><br>
        <%= f.number_field :res %>
      </div>
      <div class="field">
        <%= f.label :acc %><br>
        <%= f.number_field :acc %>
      </div>
      <div class="field">
        <%= f.label :atk_awake %><br>
        <%= f.number_field :atk_awake %>
      </div>
    </div>
  <div class="col-md-6 ">
      <div class="field">
        <%= f.label :def_awake %><br>
        <%= f.number_field :def_awake %>
      </div>
      <div class="field">
        <%= f.label :vel_awake %><br>
        <%= f.number_field :vel_awake %>
      </div>
      <div class="field">
        <%= f.label :cr_awake %><br>
        <%= f.number_field :cr_awake %>
      </div>
