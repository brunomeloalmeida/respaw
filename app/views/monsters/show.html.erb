<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-xs-6 col-sm-4">
    <%= image_tag @monster.avatar.url(:thumb) %>
  </div>

  <div class="col-xs-6 col-sm-4">
    <h2 id="monster_name"><%= @monster.name %></h2>
    <% if @monster.star == 1 %>
      <h2><%= image_tag('/images/one_star') %></h2>
    <% elsif @monster.star == 2 %>
      <h2><%= image_tag('/images/two_star') %></h2>
    <% elsif @monster.star == 3 %>
      <h2><%= image_tag('/images/three_star') %></h2>
    <% elsif @monster.star == 4 %>
      <h2><%= image_tag('/images/four_star') %></h2>
    <% else %>
      <h2><%= image_tag('/images/five_star') %></h2>
    <% end %>   
  </div>

  <div class="col-xs-6 col-sm-4" id="element_icon">
    <% if @monster.element == 'Fire' %>
      <h2><%= image_tag('/images/Fire_Icon') %></h2>
    <% elsif @monster.element == 'Water' %>
      <h2><%= image_tag('/images/Water_Icon') %></h2>
    <% elsif @monster.element == 'Wind' %>
      <h2><%= image_tag('/images/Wind_Icon') %></h2>
    <% elsif @monster.element == 'Dark' %>
      <h2><%= image_tag('/images/Dark_Icon') %></h2>
    <% else %>
      <h2><%= image_tag('/images/Light_Icon') %></h2>
    <% end %>  
  </div>
</div>

<hr>

<div id="show_monster">
  <p>
    <strong>Element:</strong>
    <%= @monster.element %>
  </p>

  <p>
    <strong>Hp base:</strong>
    <%= @monster.hp_base %>
  </p>

  <p>
    <strong>Atk base:</strong>
    <%= @monster.atk_base %>
  </p>

  <p>
    <strong>Def base:</strong>
    <%= @monster.def_base %>
  </p>

  <p>
    <strong>Vel base:</strong>
    <%= @monster.vel_base %>
  </p>

  <p>
    <strong>Hp awake:</strong>
    <%= @monster.hp_awake %>
  </p>

  <p>
    <strong>Atk awake:</strong>
    <%= @monster.atk_awake %>
  </p>

  <p>
    <strong>Def awake:</strong>
    <%= @monster.def_awake %>
  </p>

  <p>
    <strong>Vel awake:</strong>
    <%= @monster.vel_awake %>
  </p>

  <p>
    <strong>High essence elemental:</strong>
    <%= @monster.high_essence_elemental %>
  </p>

  <p>
    <strong>Mid essence elemental:</strong>
    <%= @monster.mid_essence_elemental %>
  </p>

  <p>
    <strong>Low essence elemental:</strong>
    <%= @monster.low_essence_elemental %>
  </p>

  <p>
    <strong>High essence magic:</strong>
    <%= @monster.high_essence_magic %>
  </p>

  <p>
    <strong>Mid essence magic:</strong>
    <%= @monster.mid_essence_magic %>
  </p>

  <p>
    <strong>Low essence magic:</strong>
    <%= @monster.low_essence_magic %>
  </p>

  <p>
    <strong>Runes:</strong>
    <%= @monster.runes %>
  </p>

  <% if current_summoner %>
    <%  if current_summoner.id == 1 %>
    <div class="action"> 
      <%= link_to edit_monster_path(@monster)  do %>
        <button type="button" class="btn btn-primary"><%= 'Editar' %></button>
      <% end %>
    <% end %>
  <% end %>
  <%= link_to monsters_path  do %>
    <button type="button" class="btn btn-primary"><%= 'Back' %></button>
  <% end %>
    </div>
</div>