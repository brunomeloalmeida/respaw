<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-striped datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th>User Name</th>
      <th>Level</th>
      <th></th>
      <% if current_summoner %>
        <%  if current_summoner.email == 'bruno_melo_almeida@hotmail.com' %> 
          <th></th>
          <th></th>
        <% end %>
      <% end %>    
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.user_name %></td>
        <td><%= user.level %></td>
        <td><%= link_to user, class: 'decoration_button' do %>
          <%= image_tag('new_icon_monster.png') %><% end %> 
        </td>
        <% if current_summoner %>
          <%  if current_summoner.email == 'bruno_melo_almeida@hotmail.com' %>
            <td colspan="1"><%= link_to edit_user_path(user), class: 'decoration_button' do %>
              <span class="glyphicon glyphicon-pencil"></span><% end %>
            </td>
            <td><%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'decoration_button' do %>
              <span class="glyphicon glyphicon-remove"></span><% end %>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %> 
  </tbody>
</table>

<br>

<% if current_summoner %>
  <%  if current_summoner.email == 'bruno_melo_almeida@hotmail.com' %>
    <%= button_to new_user_path, :class => "btn btn-default", :method => :get do %>
        <span class="glyphicon glyphicon-plus"></span> <% end %>
  <% end %>
<% end %>